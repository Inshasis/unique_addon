 "css": "/*@page {    */\n/*        size: A4 portrait;    */\n/*        padding-left: 8px;    */\n/*        padding-right: 0px;*/\n/*        margin-top: 0px;*/\n/*        margin-bottom: 10px;*/\n    \n/*        @bottom-center {width: 100%; content: element(footer)}*/\n/*    }  */\n    \n/*    @media print {*/\n/*        .footer {*/\n/*            left: 0;*/\n/*            width: 100%;*/\n/*            position: running(footer);*/\n/*            height: 50px;*/\n/*        }  */\n/*    }*/",
